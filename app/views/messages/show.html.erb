<div class="container col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%=link_to @user.email, user_path(id: @user.id) %></h3>
    </div>
    
    <div class="panel-body">
    <%= @msg.msg %>
    <br>
    <small>posted <%=link_to distance_of_time_in_words_to_now(@msg.created_at), msg_path(id: @msg.id) %> ago</small>
    </div>
    <div class="panel-footer">
      <% if @current_user.following? @user %>
        <%= link_to "Stop Following #{@user.email}", stop_following_user_path(id: @user.id), method: :post %>
      <% else %>
        <%= link_to "Follow #{@user.email}", follow_user_path(id: @user.id), method: :post %>
      <% end %>
    </div>
    </div>
  </div>
</div>
