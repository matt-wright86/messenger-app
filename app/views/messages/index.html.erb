<%=link_to 'Post New Message', new_msg_path %>
<%= link_to "Sign Out", sign_out_path %>

<div class="container">

  <div class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <% if @current_user.following? user %>
          <%= "Following #{user.email}"%>
        <% else %>
          <%= link_to "Follow #{user.email}", follow_user_path(id: user.id), method: :post %>
        <% end %>
      </li>
    <% end %>
  </div>

<% @people.each do |user| %>
  <% user.messages.each do |msg| %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to user.email, user_path(id: user.id) %></h3>
  </div>
  <div class="panel-body">
    <%= msg.msg %>
    <br>
    <small>posted <%=link_to distance_of_time_in_words_to_now(msg.created_at), msg_path(id: msg.id) %> ago</small>
  </div>
</div>
<% end %>
<% end %>

</div>
